{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd server && npm install"
  },
  "deploy": {
    "startCommand": "cd server && node index.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "nixPkgs": ["nodejs-20_x"]
        }
      }
    }
  }
}
