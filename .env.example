# DHL Lead Hunter - Environment Variables

# === REQUIRED API KEYS ===

# Google Gemini API (REQUIRED for main analysis)
API_KEY=your_gemini_api_key_here

# Groq API (REQUIRED for fast analysis)
GROQ_API_KEY=your_groq_api_key_here

# === OPTIONAL API KEYS (for enhanced functionality) ===

# Claude API (Anthropic) - Backup LLM for high-quality analysis
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API - Backup LLM (GPT-4)
OPENAI_API_KEY=your_openai_api_key_here

# Google Search API - For direct search queries (backup to Gemini Grounding)
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# === SWEDISH BUSINESS DATA APIs (recommended) ===

# Ratsit API - For Swedish company data, credit ratings, and financials
RATSIT_API_KEY=your_ratsit_api_key_here

# UC (Upplysningscentralen) - For credit reports
UC_API_KEY=your_uc_api_key_here

# === TECH ANALYSIS APIs (optional) ===

# BuiltWith API - For detailed tech stack analysis
BUILTWITH_API_KEY=your_builtwith_api_key_here

# Wappalyzer API - For website technology detection
WAPPALYZER_API_KEY=your_wappalyzer_api_key_here

# === EMAIL & VERIFICATION APIs (optional) ===

# Hunter.io API - For email verification and finding
HUNTER_API_KEY=your_hunter_api_key_here

# === NEWS & DATA APIs (optional) ===

# NewsAPI - For company news and articles
NEWS_API_KEY=your_newsapi_key_here

# === SEARCH & SCRAPING APIs (optional) ===

# Algolia - For fast search indexing and retrieval
ALGOLIA_APP_ID=your_algolia_app_id_here
ALGOLIA_API_KEY=your_algolia_api_key_here
ALGOLIA_INDEX_NAME=leads

# Browse.ai - For automated web scraping with robots
BROWSE_AI_API_KEY=your_browse_ai_api_key_here

# Firecrawl - For intelligent web scraping and crawling
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Octoparse - Cloud-based visual web scraping
OCTOPARSE_API_KEY=your_octoparse_api_key_here

# Crawl4AI - Already installed, AI-powered web crawling
CRAWL4AI_ENABLED=true

# === ADDITIONAL AI SERVICES (optional) ===

# DeepSeek - Chinese AI model for analysis
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Tandem.ai - AI collaboration and analysis
TANDEM_AI_API_KEY=your_tandem_ai_api_key_here

# === DATABASE ===

# PostgreSQL Database Connection
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dhl_lead_hunter
DB_USER=postgres
DB_PASSWORD=your_db_password_here

# === SERVER CONFIG ===

# Server Port
PORT=3001

# Environment
NODE_ENV=development

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# JWT Secret
JWT_SECRET=your_jwt_secret_here_change_in_production

# === FRONTEND CONFIG ===

# Vite uses VITE_ prefix for frontend environment variables
VITE_API_URL=http://localhost:3001

# Frontend API Keys (REQUIRED - must use VITE_ prefix for Vite to expose them)
VITE_GEMINI_API_KEY=your_gemini_api_key_here
VITE_GROQ_API_KEY=your_groq_api_key_here
