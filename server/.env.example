# ============================================
# DATABASE
# ============================================
DATABASE_URL=postgresql://dhl_user:your_secure_password@localhost:5432/dhl_lead_hunter
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dhl_lead_hunter
DB_USER=dhl_user
DB_PASSWORD=your_secure_password_here_min_16_chars

# Database Pool
DB_POOL_MIN=2
DB_POOL_MAX=20

# ============================================
# JWT & SECURITY
# ============================================
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Encryption (generera med: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here

# Session Secret
SESSION_SECRET=your_session_secret_min_32_characters

# ============================================
# SERVER
# ============================================
PORT=3001
NODE_ENV=development
API_VERSION=v1

# Frontend URL (för CORS och redirects)
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-production-domain.com

# ============================================
# AZURE AD SSO (för DHL-anställda)
# ============================================
# Hämta från Azure Portal → App registrations
AZURE_CLIENT_ID=your_azure_application_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CALLBACK_URL=http://localhost:3001/api/auth/sso/callback

# Production callback (uppdatera när ni deployer)
# AZURE_CALLBACK_URL=https://your-domain.com/api/auth/sso/callback

# ============================================
# REDIS (för caching och sessions)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_PER_USER=200

# ============================================
# LLM APIs
# ============================================
# Google Gemini
GEMINI_API_KEY=din_gemini_api_nyckel

# Groq (GRATIS)
GROQ_API_KEY=din_groq_api_nyckel

# OpenAI (valfritt)
OPENAI_API_KEY=din_openai_api_nyckel

# Anthropic Claude (valfritt)
CLAUDE_API_KEY=din_claude_api_nyckel

# Tavily Search (för OpenAI/Claude web search)
TAVILY_API_KEY=din_tavily_api_nyckel

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# ============================================
# EMAIL (för notifikationer)
# ============================================
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@dhl.se
SMTP_PASSWORD=your_smtp_password
EMAIL_FROM=DHL Lead Hunter <noreply@dhl.se>

# Admin email (för notifikationer om nya användare)
ADMIN_EMAIL=admin@dhl.se

# ============================================
# FILE STORAGE
# ============================================
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=csv,xlsx,json

# ============================================
# BACKUP
# ============================================
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
AUTO_BACKUP_INTERVAL_HOURS=24

# ============================================
# MONITORING & ALERTS
# ============================================
# Sentry (för error tracking)
SENTRY_DSN=

# DataDog (för metrics)
DATADOG_API_KEY=

# ============================================
# SECURITY
# ============================================
# IP Whitelist (komma-separerad lista, tom = alla tillåtna)
IP_WHITELIST=

# CSRF Protection
CSRF_ENABLED=true

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=false

# ============================================
# FEATURE FLAGS
# ============================================
ENABLE_SSO=true
ENABLE_API_KEYS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_AUTO_BACKUP=true
ENABLE_AUDIT_LOG=true

# ============================================
# DEVELOPMENT
# ============================================
# Sätt till true för att se detaljerade error messages
DEBUG=false
VERBOSE_LOGGING=false
